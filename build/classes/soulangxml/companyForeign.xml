		<!--插入数据库,temp1是程序中，用JDBCHelper.createMysqlTemplate创建template时指定的名称 -->
		<sql
		   sql="REPLACE INTO Tmp_Company_Info (Tmp_Company_Code,Tmp_Company_Name,Tmp_Company_di,Tmp_Company_logo,Tmp_Company_conduimg,Tmp_Company_URL,
		   Tmp_Company_Comp,Tmp_Company_Time,Tmp_Company_Address,Tmp_Company_Active,Tmp_Company_Stage,Tmp_Company_Industry,
		   Tmp_Company_SubIndustry,Tmp_Company_TAG,Tmp_Company_Brief,Tmp_Company_Product,Tmp_Company_Type,Tmp_Company_Fundstatus,
		   Tmp_Company_Fundneeds,Tmp_Company_regisnum,Tmp_Company_operastate,Tmp_Company_legal,Tmp_Company_gtype,Tmp_Company_datees,
		   Tmp_Company_reca,Tmp_Company_operaper,Tmp_Company_resi,Tmp_Company_Note,deleteFlag,createtime,updtime) 
		   VALUES (?,?,'1',?,?,?,?,?,?,?,?,?,?,?,?,?,'1',?,?,?,?,?,?,?,?,?,?,null,'0',now(),date_add(utc_timestamp(), interval 8 hour) )"
